{
  "provider": "google_drive",
  "poll_interval": 300,
  "output": {
    "provider": "obsidian",
    "directory": "inbox",
    "asset_directory": "media",
    "obsidian": {
      "repository_path": "~/vaults/company-notes",
      "repository_url": "git@github.com:your-org/obsidian-vault.git",
      "branch": "main",
      "remote": "origin",
      "private_key_path": "/etc/pdf2md-monitor/ssh/id_ed25519",
      "known_hosts_path": "/etc/pdf2md-monitor/ssh/known_hosts",
      "media_mode": "pdf",
      "push": true
    }
  },
  "state": {
    "path": "./state/processed.json"
  },
  "llm": {
    "provider": "simple"
  },
  "google_drive": {
    "folder_id": "YOUR_FOLDER_ID_HERE",
    "oauth_client_secrets_file": "./credentials/client_secret.json",
    "scopes": [
      "https://www.googleapis.com/auth/drive.readonly"
    ]
  }
}
