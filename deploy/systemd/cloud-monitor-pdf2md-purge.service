[Unit]
Description=Prune Cloud Monitor PDF2MD output beyond retention window
After=${SERVICE_NAME}.service

[Service]
Type=oneshot
User=${SERVICE_USER}
Group=${SERVICE_GROUP}
WorkingDirectory=${INSTALL_PREFIX}
ExecStart=${INSTALL_PREFIX}/.venv/bin/python ${INSTALL_PREFIX}/scripts/purge_output.py \
  ${OUTPUT_DIR} \
  --days ${RETENTION_DAYS} \
  --recursive \
  --remove-empty-dirs
